%h3 Board history

%h5 Cards
%table.board-history
  %tbody
    %tr
      %td(colspan=3){:class => "direction-n"}
        .suit-s
          S
          %span.cards= @board.deal_cards_for("N")["S"].map(&:value)
        .suit-h
          H
          %span.cards= @board.deal_cards_for("N")["H"].map(&:value)
        .suit-d
          D
          %span.cards= @board.deal_cards_for("N")["D"].map(&:value)
        .suit-c
          C
          %span.cards= @board.deal_cards_for("N")["C"].map(&:value)
    %tr
      %td.direction-w
        .suit-s
          S
          %span.cards= @board.deal_cards_for("W")["S"].map(&:value)
        .suit-h
          H
          %span.cards= @board.deal_cards_for("W")["H"].map(&:value)
        .suit-d
          D
          %span.cards= @board.deal_cards_for("W")["D"].map(&:value)
        .suit-c
          C
          %span.cards= @board.deal_cards_for("W")["C"].map(&:value)
      %td.directions
        %div N
        %div W E
        %div S
      %td.direction-e
        .suit-s
          S
          %span.cards= @board.deal_cards_for("E")["S"].map(&:value)
        .suit-h
          H
          %span.cards= @board.deal_cards_for("E")["H"].map(&:value)
        .suit-d
          D
          %span.cards= @board.deal_cards_for("E")["D"].map(&:value)
        .suit-c
          C
          %span.cards= @board.deal_cards_for("E")["C"].map(&:value)
    %tr
      %td(colspan=3){:class => "direction-s"}
        .suit-s
          S
          %span.cards= @board.deal_cards_for("S")["S"].map(&:value)
        .suit-h
          H
          %span.cards= @board.deal_cards_for("S")["H"].map(&:value)
        .suit-d
          D
          %span.cards= @board.deal_cards_for("S")["D"].map(&:value)
        .suit-c
          C
          %span.cards= @board.deal_cards_for("S")["C"].map(&:value)

%h5 Auction
%dt Dealer
%dd= @board.dealer
%ul
  - @board.bids.each do |bid|
    %li= bid.to_s

%h5 Score
%dt Contract
%dd= @board.contract
%dt Declarer
%dd= @board.declarer
%dt Tricks NS
%dd= @board.tricks_ns
%dt Points NS
%dd= @board.points_ns
