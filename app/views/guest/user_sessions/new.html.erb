<% form_for @user_session, :url => guest_user_session_path do |form| %>
<p>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.error_message_on :email %>
</p>
<p>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.error_message_on :password %>
</p>
<p>
  <%= form.submit "Login" %>
</p>
<% end %>
