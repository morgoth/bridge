<html>
  <head>
    <title>Libre</title>
  </head>
  <body>
    <div id="libre-flash-notice"><%= notice %></div>
    <% if current_user %>
      <div id="libre-user-bar">
        Logged in as <%= current_user.email %>
        <%= button_to "Log out", user_user_session_path, :method => :delete %>
      </div>
    <% else %>
      <div id="libre-sign-up-bar">
        Not logged in
        <%= link_to "Log in", new_guest_user_session_path %>
        <%= link_to "Sign up", new_guest_user_path %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
